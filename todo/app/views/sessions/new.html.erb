<div>
	<% if flash[:alert] %>
	<p id="notice"><%= flash[:alert] %><%= params[:username] %></p>
	<% end %>

	<%= form_tag  do %>
		<fieldset>
			<div>
				<label for="username">Name:</label>
				<%= text_field_tag :username, params[:username] %>
			</div>

			<div>
				<label for="password">Password:</label>
				<%= password_field_tag :password, params[:password] %>
			</div>

			<div>
				<%= submit_tag "Login" %>
			</div>
		</fieldset>
	<% end %>
</div>
