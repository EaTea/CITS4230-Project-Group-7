<%= form_for(@list) do |f| %>
	<% if @list.errors.any? %>
		<div class="error_explanation">
			<h2><%= pluralize(@list.errors.count, "error") %> encountered:</h2>

			<ul>
			<% @list.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
